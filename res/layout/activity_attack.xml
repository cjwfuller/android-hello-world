<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/stars" >
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="match_parent">
	    <ImageButton
	        android:id="@+id/bombButton"
	        android:contentDescription="@string/content_desc_bomb"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/attack_bomb"
	        android:background="#00000000"
	        android:layout_margin="9dp"
	        android:soundEffectsEnabled="true" />
	    <ImageButton
	        android:id="@+id/invadeButton"
	        android:contentDescription="@string/content_desc_invade"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/attack_invade"
	        android:background="#00000000"
	        android:layout_margin="9dp"
	        android:soundEffectsEnabled="true" />
	    <ImageButton
	        android:id="@+id/infectButton"
	        android:contentDescription="@string/content_desc_virus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/attack_virus"
	        android:background="#00000000"
	        android:layout_margin="9dp"
	        android:soundEffectsEnabled="true" />
	    <ImageButton
	        android:id="@+id/laserButton"
	        android:contentDescription="@string/content_desc_laser"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/attack_laser"
	        android:background="#00000000"
	        android:layout_margin="9dp"
	        android:soundEffectsEnabled="true" />
	    <ImageButton
	        android:id="@+id/exitButton"
	        android:contentDescription="@string/content_desc_exit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/attackexit"
	        android:background="#00000000"
	        android:layout_margin="9dp"
	        android:soundEffectsEnabled="true" />
    </LinearLayout>
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView 
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attack_planet_caption"/>
        <TextView 
            android:textColor="#FFFFBB"
            android:textSize="25sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attack_planet_bomb"/> 
        <TextView 
            android:textColor="#FFFFBB"
            android:textSize="25sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attack_planet_invade"/>     
        <TextView 
            android:textColor="#FFFFBB"
            android:textSize="25sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attack_planet_infect"/>
        <TextView 
            android:textColor="#FFFFBB"
            android:textSize="25sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attack_planet_laser"/>
        <TextView 
            android:textColor="#FFFFBB"
            android:textSize="25sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attack_planet_exit"/>                                    
    </LinearLayout>
</LinearLayout>
